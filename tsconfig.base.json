{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@olts/core": ["packages/core/src/index.ts"],
            "@olts/core/array": ["packages/core/src/array.ts"],
            "@olts/core/asserts": ["packages/core/src/asserts.ts"],
            "@olts/core/canvas-defaults": [
                "packages/core/src/canvas-defaults.ts"
            ],
            "@olts/core/color": ["packages/core/src/color.ts"],
            "@olts/core/color-like": ["packages/core/src/color-like.ts"],
            "@olts/core/console": ["packages/core/src/console.ts"],
            "@olts/core/coordinate": ["packages/core/src/coordinate.ts"],
            "@olts/core/css": ["packages/core/src/css.ts"],
            "@olts/core/disposable": ["packages/core/src/disposable.ts"],
            "@olts/core/dom": ["packages/core/src/dom.ts"],
            "@olts/core/easing": ["packages/core/src/easing.ts"],
            "@olts/core/extent": ["packages/core/src/extent.ts"],
            "@olts/core/functions": ["packages/core/src/functions.ts"],
            "@olts/core/has": ["packages/core/src/has.ts"],
            "@olts/core/image-state": ["packages/core/src/image-state.ts"],
            "@olts/core/index": ["packages/core/src/index.ts"],
            "@olts/core/js-obj": ["packages/core/src/js-obj.ts"],
            "@olts/core/math": ["packages/core/src/math.ts"],
            "@olts/core/net": ["packages/core/src/net.ts"],
            "@olts/core/proj": ["packages/core/src/proj/index.ts"],
            "@olts/core/size": ["packages/core/src/size.ts"],
            "@olts/core/string": ["packages/core/src/string.ts"],
            "@olts/core/transform": ["packages/core/src/transform.ts"],
            "@olts/core/uri": ["packages/core/src/uri.ts"],
            "@olts/core/util": ["packages/core/src/util.ts"],
            "@olts/core/webgl": ["packages/core/src/webgl.ts"],
            "@olts/core/xml": ["packages/core/src/xml.ts"],
            "@olts/events": ["packages/events/src/index.ts"],
            "@olts/expr": ["packages/expressions/src/index.ts"],
            "@olts/geometry": ["packages/geometry/src/index.ts"],
            "@olts/style": ["packages/style/src/index.ts"],
            "@olts/top": ["packages/top/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
